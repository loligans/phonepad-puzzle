  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Phonepad Puzzle",
      "cwd": "${workspaceRoot}",
      "env": {
        "NODE_ENV": "development",
      },
      "preLaunchTask": "gulp",
      "program": "${workspaceRoot}/src/app.ts",
      "outFiles": [
        "${workspaceRoot}/out/**/*.js"
      ],
      "runtimeArgs": [
        "--nolazy"
      ],
      "runtimeExecutable": null,
      "sourceMaps": true,
      "stopOnEntry": false
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach",
      "port": 5858,
    }
  ]
}